<Window x:Class="test4.MyDocumentViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test4"
        mc:Ignorable="d"
        Title="MyDocumentViewer" Height="450" Width="800">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" Height="40" Width="500" VerticalAlignment="Top" HorizontalAlignment="Left">
            <ToolBar Height="40" Width="150">
                <Button x:Name="newButton" Width="40" Height="40">
                    <Image Height="35" Width="35" Source="/new-document.png"/>
                </Button>
            <Button x:Name="openButton" Width="40" Height="40">
                    <Image Height="35" Width="35" Source="/folder.png"/>    
            </Button>
                <Button x:Name="saveButton" Width="40" Height="40">
                    <Image Height="35" Width="35" Source="/diskette.png"/>
                </Button>
            </ToolBar> 
        </ToolBarTray>
    </DockPanel>
</Window>
